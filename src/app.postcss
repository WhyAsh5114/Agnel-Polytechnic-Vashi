@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	margin: 0;
	padding: 0;
	height: 100vh;
	overflow-x: hidden;
}

.btn-accent {
	@apply text-white;
}

.divider-heading {
	@apply text-5xl font-bold lg:divider;
}

thead {
	@apply bg-accent;
}

thead > tr {
	@apply text-white;
}
